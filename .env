# =============================
# CarStore Environment Variables
# =============================

# --- AWS / ECR ---
AWS_REGION=sa-east-1
ECR_REPOSITORY=carstore-core
EC2_ECR_REGISTRY=123456789.dkr.ecr.sa-east-1.amazonaws.com

# --- Database ---
DB_HOST=db
DB_PORT=5432
DB_NAME=soat7
DB_USER=postgres
DB_PASSWORD=postgres

# --- Admin bootstrap ---
ADMIN_NAME=admin
ADMIN_EMAIL=admin@local
ADMIN_PASSWORD=admin123
ADMIN_ROLE=ROLE_ADMIN

# --- Integration ---
VIEW_BASE_URL=http://carstore-view:8081

# --- Swagger ---
SPRINGDOC_API_DOCS_ENABLED=true
SPRINGDOC_SWAGGER_UI_ENABLED=true

# --- JWT ---
JWT_ISSUER=carstore-core
JWT_PRIVATE_KEY_PATH=/app/keys/private_key.pem

# --- EC2 Deploy ---
EC2_HOST=YOUR_EC2_IP
EC2_USER=ubuntu
EC2_APP_DIR=/opt/carstore

# =============================
